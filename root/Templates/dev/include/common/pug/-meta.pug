meta(charset="utf-8")
meta(name="viewport", content="width=device-width")
meta(name="format-detection", content="telephone=no, email=no, address=no")
meta(name="robots", content="index, follow")
meta(name="keywords", content=vars.keyword)
meta( name="description", content=vars.description)

block ogp
meta(property="og:url", content=globalVar.share.url[language])
meta(property="og:type", content="website")
meta(property="og:title" content=vars.title)
meta(property="og:image", content=globalVar.share.image)
meta(property="og:description", content=vars.description)
meta(property="og:site_name", content=globalVar.og_site_name[language])

block twittercard
//- Twitter Card
meta(name="twitter:card", content="summary_large_image")
meta(name="twitter:image", content=globalVar.share.image)

//- title
title #{vars.title}

//- favicon
link(rel="shortcut icon", href=vars.path + "favicon.ico")

