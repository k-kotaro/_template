block json-ld
    script(type='application/ld+json').
        [
            {
                "@context": "http://schema.org",
                "@type": "WebSite",
                "name": "#{globalVar.og_site_name[language]}",
                "url": "#{globalVar.siteUrl}"
            },
            {
                "@context": "http://schema.org",
                "@type": "BreadcrumbList",
                "itemListElement": [
                    {
                        "@type": "ListItem",
                        "position": 1,
                        "item": {
                            "@id": "#{globalVar.siteUrl}",
                            "name": ""
                        }
                    },
                    {
                        "@type": "ListItem",
                        "position": 2,
                        "item": {
                            "@id": "#{vars.url}",
                            "name": "#{vars.name}"
                        }
                    }
                ]
            }
        ]

